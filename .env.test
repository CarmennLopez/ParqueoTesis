# Variables de entorno para Testing

# Servidor
PORT=3001
NODE_ENV=test

# Base de datos (testing)
MONGODB_URI=mongodb://localhost:27017/parqueo_umg_test

# Redis
REDIS_URL=redis://localhost:6379/1

# JWT
JWT_SECRET=test_secret_key_not_for_production_12345678
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Parqueo
PARKING_LOT_NAME=Parqueo Test

# Logging
LOG_LEVEL=error
LOG_DIR=./logs/test

# Simulaciones
MQTT_SIMULATION_MODE=true
FEL_SIMULATION_MODE=true
LDAP_SIMULATION_MODE=true
