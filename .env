MONGODB_URI=mongodb://localhost:27017/parqueo_umg
JWT_SECRET=8f9d7e3c5b2a1f6e9d4c8b1a7f3e2d5c9b6a1f4e8d3c7b2a5f1e9d6c4b8a


# --- SERVIDOR ---
PORT=3000
NODE_ENV=development

# --- REDIS (Necesario para el caché) ---
# Si usas Windows y no tienes Redis instalado, usa Memurai o comenta esto si el código lo permite (aunque es requerido por redisClient.js)
REDIS_URL=redis://localhost:6379

# --- SEGURIDAD ---
# Duración del token
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
# Orígenes permitidos (CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# --- CONFIGURACIÓN DE PARQUEO ---
PARKING_LOT_NAME=Parqueo Principal UMG

# --- MODOS DE SIMULACIÓN (Importante para evitar errores de conexión) ---
# Mantén estos en 'true' si no tienes el hardware o servicios externos reales
MQTT_SIMULATION_MODE=true
FEL_SIMULATION_MODE=true
LDAP_SIMULATION_MODE=true

# --- LOGGING ---
LOG_LEVEL=debug
LOG_DIR=./logs

# --- RATE LIMITING ---
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100